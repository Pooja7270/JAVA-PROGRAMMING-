import java.util.Scanner;
public class Pattern7{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        int n,i,j,k;
        System.out.println("enter n: ");
        n=sc.nextInt();
      
          for(i=n;i>=1;i--)
        {
      for(k=n-1;k>=i;k--)
        {
        System.out.print( "  " );
       }
        for(j=1;j<=i;j++)
{
        System.out.print( " * " );
	}
    System.out.println( );
	}


}
}


         
        
                     
